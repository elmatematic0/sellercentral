<h1>All Products</h1>
<p class="flash"><%= flash.notice %></p>
<table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  <% @products.each do |p| %>
  <tr>
    <td><%= p.id %></td>
    <td><%= p.name %></td>
    <td><%= p.description %></td>
    <td><%= p.price %></td>
    <td><%= link_to "View Product", product_path(p) %></td>
  </tr>
  <% end %>
</table>
<table>
  <tr>
    <td><%= link_to "Sign-up", new_user_path %></td>
    <td><%= link_to "Login", products_path %></td>
    <td><%= link_to "Create New Product", new_product_path %></td>

  </tr>
</table>
